<% provide(:title, "Adjustments for pay period "+current_pay_period.first.strftime("%d %b %Y")+" to "+current_pay_period.last.strftime("%d %b %Y")) %>
<h1><%= @employee.name %>'s adjustments <%=current_pay_period.first.strftime("%d %b %Y")%> - <%=current_pay_period.last.strftime("%d %b %Y")%></h1>


<table class="table table-striped">
  <tr>
    <th>Amount</th>
    <th></th>
  </tr>

<% @employee.adjustments.each do |adjustment| %>
  <tr>
    <td><%=adjustment.amount%></td>
    <td><%= button_to "Delete", adjustment, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New adjustment", new_employee_adjustment_url(@employee), method: :get, class: "btn btn-large btn-primary" %>
<%= button_to "Back to adjustment summary", adjustments_path, method: :get, class: "btn btn-large" %>