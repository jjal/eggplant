<% provide(:title, "Pay checks for pay period "+@startDate.strftime("%d/%m/%y")+" to "+@endDate.strftime("%d/%m/%y")) %>
<h1>Check hours - pay period <%=@startDate.strftime("%d/%m/%y")+" to "+@endDate.strftime("%d/%m/%y")%></h1>

<table class="table table-striped">
  <tr>
    <th>Employee</th>
    <th>Recorded Hours</th>
    <th>Paycheck Status</th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.name %></td>
    <td><%= employee.get_worked_shift_total @startDate, @endDate %></td>
    <td><%= employee.current_paycheck(@startDate, @endDate).try(:status) %></td>
    <td><%= link_to "Edit hours", employee_worked_shifts_url(employee) %>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Paycheck", new_paycheck_path %>
